// Calculadora

#include <math.h>
#include <stdio.h>

int main() {
  float num1, num2;

  char operacao;

  printf("Digite um número: \n");
  scanf("%f", &num1);

  printf("\nDIgite outro número: \n");
  scanf("%f", &num2);

  printf("\nDigite o operador\n\n(+) Para Adição\n(-) Para Subtração\n(*) Para Multiplicação\n(/) Para Divisão\n(,) Para Resto da Divisão\n\nQual operação deseja: ");
  scanf(" %c", &operacao);


  // Fazer a soma
  if (operacao == '+') {
    printf("\nO resultado da soma é: %.2f", num1 + num2);
  }


  // Fazer a subtração
  if (operacao == '-') {
    printf("\nO resultado da subtração é: %.2f", num1 - num2);
  }


  // Fazer a multiplicação
  if (operacao == '*') {
    printf("\nO resultado da multiplicação é: %.2f", num1 * num2);
  }


  // Fazer a divisão
  if (operacao == '/') {
    printf("\nO resultado da divisão é: %.2f", num1 / num2);
  }


  // Fazer o resto da divisão
  if (operacao == '%') {
    printf("\nO resultado do resto é: %.2f", fmod(num1, num2));
  }

  return 0;
}
