/* Faça um programa que pergunte a idade do usuário e divida o valor por quatro. Mostre o quociente e resto da operação */

#include <stdio.h>
#include <math.h>

int main() {

 int a, b, c;

  printf("Qual a sua idade: ");
  scanf("%i", &a);
  
  b = a / 4;

  c = a % 4;
  
  printf("Dividido por 4: %i\nO resto da divisão é %i", b, c);
  
  return 0;
}
